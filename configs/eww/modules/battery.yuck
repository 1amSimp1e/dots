;; Battery Widgets ;;
(defwidget bat []
   (box
    :class "bat_module"
    :space-evenly false
  (circular-progress
      :value battery-capacity
      :class "batbar"
      :thickness 4
      :style "${battery-style}"
      (button
        :tooltip "battery on ${round(EWW_BATTERY.total_avg,0)}%"
        :onclick "${EWW_CMD} open --toggle system-menu"
        (label :class "icon-text" :text "")))))
